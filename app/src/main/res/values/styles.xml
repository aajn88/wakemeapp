<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>

        <item name="primaryLightAlpha">@color/black_87_percent</item>
        <item name="secondaryLightAlpha">@color/black_54_percent</item>
        <item name="thirdLightAlpha">@color/black_38_percent</item>
        <item name="dividerLightAlpha">@color/black_12_percent</item>
    </style>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_70_percent</item>

    </style>

    <style name="CardViewTheme" parent="CardView">
        <item name="cardElevation">?attr/cardRestingElevation</item>
    </style>

    <style name="FabTheme.Mini" parent="FabTheme">
        <item name="fab_size">mini</item>
    </style>

    <style name="FabTheme">
        <item name="android:layout_margin">@dimen/standardHorizontalMargin</item>
        <item name="menu_colorNormal">@color/colorAccent</item>
        <item name="menu_colorPressed">@color/colorAccentA100</item>
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_colorPressed">@color/colorAccentA100</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WeekDayTheme" parent="WeekDayBaseTheme"/>

    <style name="WeekDayBaseTheme">
        <item name="android:paddingLeft">@dimen/condensedHorizontalMargin</item>
        <item name="android:paddingRight">@dimen/condensedHorizontalMargin</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white_50_percent</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="StyledDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/secondaryLightAlpha</item>
        <item name="android:windowTitleStyle">@style/DialogTitleTextStyle</item>
    </style>

    <style name="DialogTitleTextStyle">
        <item name="android:textColor">?attr/primaryLightAlpha</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

</resources>
