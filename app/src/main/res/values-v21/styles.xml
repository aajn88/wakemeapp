<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:colorControlHighlight">@color/colorAccent</item>
    <item name="android:colorButtonNormal">@color/colorPrimary</item>
    <item name="android:buttonStyle">@style/ButtonStyle</item>
    <item name="actionBarElevation">@dimen/actionBarElevation</item>
    <item name="cardRestingElevation">@dimen/cardRestingElevation</item>
    <item name="cardRaisedElevation">@dimen/cardRaisedElevation</item>
  </style>

  <style name="ButtonStyle" parent="@android:style/Widget.Material.Button">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="ButtonStyle.Borderless" parent="@android:style/Widget.Material.Button.Borderless"/>

  <style name="Dark"/>

  <style name="Dark.TextLabel" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/white</item>
    <item name="android:textColorHint">@color/white_50_percent</item>
    <item name="android:colorControlNormal">@color/white</item>
    <item name="android:colorControlActivated">@color/white</item>
    <item name="android:colorAccent">@color/white</item>
  </style>

  <style name="WeekDayTheme" parent="WeekDayBaseTheme">
    <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
  </style>

</resources>